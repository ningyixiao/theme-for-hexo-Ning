<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <% if (theme.favicon){ %>
        <link rel="shortcut icon" type="image/x-icon" href="<%- theme.favicon %>">
    <% } %>
    <title><%= config.title %></title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <%- css('mdb/css/bootstrap.min.css') %>
    <!-- Material Design Bootstrap -->
    <%- css('mdb/css/mdb.min.css') %>
    <!-- Your custom styles (optional) -->
    <%- css('mdb/css/style.css') %>
</head>

<body>

    <!-- Start your project here-->
    <!--Navbar-->
    <nav class="navbar navbar-toggleable-md fixed-top navbar-dark teal">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="<%- url_for('/') %>">
                <strong>小宁师傅</strong>
            </a>
            <div class="collapse navbar-collapse" id="navbarNav1">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="<%- url_for(config.archive_dir) %>" class="nav-link">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            归档
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            关于我
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- for different templates -->
    <%- body %>
    <!--Footer-->
    <footer class="page-footer fixed-bottom center-on-small-only">
        <!--Copyright-->
        <div class="footer-copyright">
            <div class="container-fluid">
                © 2017 Ning Yixiao 
                <span>|</span> 
                <a href="https://www.MDBootstrap.com"> MDBootstrap</a>
                <small>&&</small>
                <a href="https://hexo.io">hexo</a>
            </div>
        </div>
        <!--/.Copyright-->
    </footer>
    <!--/.Footer-->

    <!-- /Start your project here-->

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <%- js('mdb/js/jquery-3.1.1.min.js') %>
    <!-- Bootstrap tooltips -->
    <%- js('mdb/js/tether.min.js') %>
    <!-- Bootstrap core JavaScript -->
    <%- js('mdb/js/bootstrap.min.js') %>
    <!-- MDB core JavaScript -->
    <%- js('mdb/js/mdb.min.js') %>
</body>

</html>
